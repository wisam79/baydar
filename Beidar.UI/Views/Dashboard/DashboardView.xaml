<UserControl x:Class="Beidar.UI.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Beidar.UI.Views.Dashboard"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource Dash_Title}" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,0,0,20"/>

        <!-- Stats Cards -->
        <UniformGrid Grid.Row="1" Columns="4" Rows="1" Margin="0,0,0,20">
            <!-- Total Sales -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Margin="5" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="CashMultiple" Width="24" Height="24" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Dash_TotalSales}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Stats.TotalSalesToday, StringFormat={}{0:C}}" FontSize="24" FontWeight="Bold" Margin="0,10,0,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="{DynamicResource Dash_Today}" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                </StackPanel>
            </Border>

            <!-- Orders -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Margin="5" Padding="20">
                 <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="Receipt" Width="24" Height="24" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Dash_Orders}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Stats.TotalOrdersToday}" FontSize="24" FontWeight="Bold" Margin="0,10,0,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="{DynamicResource Dash_Today}" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                </StackPanel>
            </Border>

            <!-- Low Stock -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Margin="5" Padding="20">
                 <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="AlertCircle" Width="24" Height="24" Foreground="OrangeRed" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Dash_LowStock}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Stats.LowStockCount}" FontSize="24" FontWeight="Bold" Margin="0,10,0,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="{DynamicResource Dash_Items}" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                </StackPanel>
            </Border>

            <!-- Net Profit -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Margin="5" Padding="20">
                 <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="ChartLine" Width="24" Height="24" Foreground="Green" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Dash_NetProfit}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Stats.NetProfit, StringFormat={}{0:C}}" FontSize="24" FontWeight="Bold" Margin="0,10,0,0" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBlock Text="{DynamicResource Dash_Estimated}" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Charts or Recent Activity Area -->
        <Grid Grid.Row="2">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="20">
                <TextBlock Text="Sales Overview (Placeholder for Chart)" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>