<ui:ContentDialog x:Class="Beidar.UI.Views.Products.ProductFormDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
                  Title="{DynamicResource Prod_Add}"
                  PrimaryButtonText="Save"
                  CloseButtonText="Cancel"
                  DefaultButton="Primary">

    <StackPanel MinWidth="350">
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
            <Style TargetType="ui:NumberBox">
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>
        </StackPanel.Resources>

        <TextBox ui:ControlHelper.Header="{DynamicResource Prod_Col_Name}" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
        
        <TextBox ui:ControlHelper.Header="{DynamicResource Prod_Col_Category}" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" />
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:NumberBox Grid.Column="0" Header="{DynamicResource Prod_Col_Price}" Value="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SpinButtonPlacementMode="Inline" Minimum="0"/>
            <ui:NumberBox Grid.Column="2" Header="Cost" Value="{Binding Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SpinButtonPlacementMode="Inline" Minimum="0"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:NumberBox Grid.Column="0" Header="{DynamicResource Prod_Col_Stock}" Value="{Binding Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SpinButtonPlacementMode="Inline" />
            <TextBox Grid.Column="2" ui:ControlHelper.Header="{DynamicResource Prod_Col_Barcode}" Text="{Binding Barcode, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </StackPanel>
</ui:ContentDialog>
