<Application x:Class="Beidar.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Beidar.UI"
             xmlns:vm="clr-namespace:Beidar.UI.ViewModels"
             xmlns:views="clr-namespace:Beidar.UI.Views.Dashboard"
             xmlns:viewsProducts="clr-namespace:Beidar.UI.Views.Products"
             xmlns:viewsSales="clr-namespace:Beidar.UI.Views.Sales">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Teal" SecondaryColor="Lime" />
                <ResourceDictionary Source="Assets/Strings/Strings.en.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <!-- DataTemplates for ViewModels -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
                <viewsProducts:ProductsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SalesViewModel}">
                <viewsSales:SalesView />
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
